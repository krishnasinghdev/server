{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "check": "oxlint && oxfmt --write",
    "clean": "rm -rf dist node_modules .wrangler .pnpm-store",
    "cf-types": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate --config ./src/config/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./src/config/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./src/config/drizzle.config.ts",
    "auth:gen-schema": "pnpm dlx @better-auth/cli@latest generate --config ./better-auth.config.ts --output ./src/db/schema.ts",
    "email:dev": "email dev --dir ./src/templates/emails",
    "email:build": "email build --dir ./src/templates/emails",
    "email:export": "email export --dir ./src/templates/emails"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.4.16",
    "dodopayments": "^2.15.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.4",
    "hono-status-monitor": "^1.0.7",
    "postgres": "^3.4.8",
    "resend": "^6.8.0",
    "twilio": "^5.11.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "wrangler": "^4.59.2"
  }
}
